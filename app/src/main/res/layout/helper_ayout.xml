<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/InstacksIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_mid"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/helpdes"
        android:id="@+id/textViewHelp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/InstacksIcon"/>

    <Button
        android:id="@+id/playButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHelp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Play" />

    <Button
        android:id="@+id/homebut"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playButton"
        android:layout_toStartOf="@+id/playButton"
        android:text="Instagram" />

    <Button
        android:id="@+id/aboutbut"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playButton"
        android:layout_toEndOf="@+id/playButton"
        android:text="Gallery" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homebut"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="@string/badurl" />


</RelativeLayout>